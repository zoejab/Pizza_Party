<div id="user-page">

  <h1>Hi, <%= @user.username%>.</h1><br>

<% @user.favorite_pizza_places.each do |pizza_place|%>
    <div class="pizzaplace">
    <%= link_to pizza_place.name, pizza_place_path(pizza_place.id) %>
    </div>


    <% end %>

<% if logged_in? && current_user %>
  <%= button_to 'DELETE ACCOUNT', @user, :method => :delete, data: { confirm: "You sure?" } %>
<% end %>
</div>
